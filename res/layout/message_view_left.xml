<view xmlns:android="http://schemas.android.com/apk/res/android"
    class="info.guardianproject.otr.app.im.app.MessageView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="0dp"
        android:id="@+id/status_block"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp"
        android:layout_gravity="top"
        android:background="#eeeeee"
        >
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:layout_marginRight="0dip"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/message_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        android:layout_marginRight="36dp"
        android:paddingLeft="6dp"
        >

        <TextView
            android:id="@+id/messagets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/media_thumbnail"
            android:layout_marginBottom="1dp"
            android:padding="2dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />


        <TextView
            android:id="@+id/media_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message"
            android:layout_marginBottom="1dp"
            android:padding="2dp"
            android:visibility="gone"
            android:fontFamily="sans-serif-light"
            android:textColor="?@android:attr/textColorLink"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <ImageView
            android:id="@+id/media_thumbnail"
            android:layout_width="196dp"
            android:layout_height="128dp"
            android:layout_margin="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_file"
            android:visibility="gone"
            android:layout_below="@+id/media_title"
            />


        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:autoLink="web|email|phone|map"
            android:padding="3dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
    </RelativeLayout>
</view>
